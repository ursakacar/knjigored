<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2>Knjige ni bilo mogoče shraniti.</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :internal_number, "Interna številka" %>
    <%= form.number_field :internal_number %>
  </div>

  <div class="field">
    <%= form.label :title, "Naslov" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :author_id, "Avtor" %>
    <%= form.collection_select :author_id, Author.order(:name), :id, :name, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :genre_id, "Žanr" %>
    <%= form.collection_select :genre_id, Genre.order(:name), :id, :name, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :is_borrowed, "Izposojena" %>
    <%= form.check_box :is_borrowed %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
