<!DOCTYPE html>
<html>
  <head>
    <title>Knjigored</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon-book.ico') %>
  </head>

  <body>
    <div class="header">
      <div class="header__section">
        <div class="header__button header__button--main">Knjigored</div>
      </div>

      <div class="header__section header__section--right">
        <div class="header__button">Domov</div>
        <% if session[:current_user] %>
          <div class="header__button">Odjava</div>
        <% else %>
          <div class="header__button">Prijava</div>
        <% end %>
      </div>
    </div>

    <div class="main-wrapper">
      <%= yield %>
    </div>
  </body>
</html>
